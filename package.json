{
	"name": "npmax",
	"description": "Package Manager",
	"version": "1.0.0",
	"main": "index.js",
	"license": "MIT",
	"homepage": "https://mehd.ir",
	"github": "https://github.com/mehdiraized/npmax",
	"author": {
		"name": "mehdir",
		"email": "mehdiraized@gmail.com",
		"url": "http://mehd.ir"
	},
	"authors": [
		"Mehdi Rezaei"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/mehdiraized/npmax.git"
	},
	"copyright": "©Mehdir, Mehdi Rezaei",
	"bugs": {
		"url": "https://github.com/mehdiraized/npmax/issues"
	},
	"social": {
		"twitter": {
			"url": "https://twitter.com/mehdiraized"
		}
	},
	"scripts": {
		"start": "electron .",
		"dev": "rollup -c -w --bundleConfigAsCjs",
		"build": "rollup -c --bundleConfigAsCjs",
		"pack": "electron-builder --dir",
		"dist": "electron-builder",
		"dist-all": "electron-builder -mwl"
	},
	"build": {
		"productName": "npMax",
		"appId": "app.mehdir.npmax",
		"copyright": "© Mehdir - Mehdi Rezaei",
		"asar": true,
		"asarUnpack": "**\\*.{node,dll}",
		"mac": {
			"type": "distribution",
			"hardenedRuntime": true,
			"gatekeeperAssess": false,
			"icon": "./public/icon.icns",
			"category": "public.app-category.productivity",
			"target": {
				"target": "default",
				"arch": [
					"arm64",
					"x64"
				]
			}
		},
		"dmg": {
			"contents": [
				{
					"x": 130,
					"y": 220
				},
				{
					"x": 410,
					"y": 220,
					"type": "link",
					"path": "/Applications"
				}
			]
		},
		"linux": {
			"maintainer": "mehdir",
			"category": "Utility",
			"description": "npm package manager",
			"packageCategory": "Utility",
			"target": [
				"AppImage"
			]
		},
		"win": {
			"target": [
				"nsis"
			],
			"icon": "./public/icon.ico"
		},
		"files": [
			"./build/**/*",
			"./dist/**/*",
			"./node_modules/**/*",
			"./public/**/*",
			"*.js"
		],
		"directories": {
			"buildResources": "public",
			"output": "./releases"
		}
	},
	"devDependencies": {
		"@rollup/plugin-commonjs": "^25.0.3",
		"@rollup/plugin-node-resolve": "^15.1.0",
		"@rollup/plugin-terser": "^0.4.3",
		"concurrently": "8.2.0",
		"electron": "^25.4.0",
		"electron-builder": "^24.6.3",
		"electron-reload": "2.0.0-alpha.1",
		"postcss": "^8.4.27",
		"rollup": "^3.27.2",
		"rollup-plugin-filesize": "^10.0.0",
		"rollup-plugin-livereload": "^2.0.5",
		"rollup-plugin-postcss": "^4.0.2",
		"rollup-plugin-svelte": "^7.1.6",
		"sass": "^1.64.2",
		"svelte": "^4.1.2",
		"svelte-preprocess": "^5.0.4"
	},
	"dependencies": {
		"axios": "^1.4.0",
		"child_process": "^1.0.2",
		"fix-path": "^4.0.0",
		"normalize.css": "^8.0.1",
		"simplebar": "^6.2.5",
		"sirv-cli": "^2.0.2"
	}
}
